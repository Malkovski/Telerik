extends detailed-user

block edit-user-content
    form.form-horizontal(method="post", action="/details", id="editProfileForm")
        fieldset
            legend Edit profile
            .form-group
                label(for="firstName", class="col-lg-2 control-label") First name
                .col-lg-10
                    input(id="firstName", class="form-control", type="text", name="firstName", placeholder="First Name")
            .form-group
                label(for="lastName", class="col-lg-2 control-label") Last name
                .col-lg-10
                    input(id="lastName", class="form-control", type="text", name="lastName", placeholder="Last name")
            .form-group
                label(for="password", class="col-lg-2 control-label") Password
                .col-lg-10
                    input(id="password", class="form-control", type="password", name="password", placeholder="Password")
            .form-group
                label(for="email", class="col-lg-2 control-label") Email
                .col-lg-10
                    input(id="email", class="form-control", type="text", name="email", placeholder="Email")
            .form-group
                label(for="picture", class="col-lg-2 control-label") Avatar
                .col-lg-10
                    input(id="picture", class="form-control", type="text", name="picture", placeholder="Link to avatar")
            .form-group
                label(for="youtube", class="col-lg-2 control-label") YouTube
                .col-lg-10
                    input(id="youtube", class="form-control", type="text", name="youtube", placeholder="YouTube")
            .form-group
                label(for="facebook", class="col-lg-2 control-label") Facebook
                .col-lg-10
                    input(id="facebook", class="form-control", type="text", name="facebook", placeholder="Facebook")
            .form-group
                .col-lg-10.col-lg-offset-2
                    .col-lg-1
                        button(type="reset", class="btn btn-danger") Cancel
                    .col-lg-1
                        button(type="submit", class="btn btn-success") Save changes
                    a(href="/details", class="btn btn-info pull-right") Close