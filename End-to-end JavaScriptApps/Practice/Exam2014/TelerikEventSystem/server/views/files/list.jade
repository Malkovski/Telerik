table.table.table-bordered
    thead
        th.col-lg-4 Filename
        th.col-lg-4 Owner
        th.col-lg-4 Private
        th.col-lg-4 Download Link
        th.col-lg-4 #
    tbody
        each file in files
            tr
                td.col-lg-4 #{file.fileName}
                td.col-lg-4
                    a(href="/profile/#{file.owner}") #{file.owner}
                td.col-lg-4 #{file.isPrivate ? 'PRIVATE' : 'PUBLIC'}
                td.col-lg-4
                    a(href="/files/download/#{file.url}") http://#{host}/files/download/#{file.fileName}
                td
                    if file.owner.toString() === currentUser._id.toString()
                        a.delete(href="/remove/" + file._id)
                            img(src="img/del.png")