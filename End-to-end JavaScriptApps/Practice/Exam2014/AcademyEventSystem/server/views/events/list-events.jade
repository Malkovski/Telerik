extends all-events

block eventsList
    table.table.table-striped.table-hover.table-bordered
        thead
            tr
                th Title
                th Category
                th Initiative
                th Season
                th Date
                th Location
        tbody
            each event in eventsList
                tr
                    td
                        a(href="/event-details/#{event._id}") #{event.title}
                    td #{event.category}
                    td #{event.initiative}
                    td #{event.season}
                    td #{event.date}
                    td #{event.latitude}/#{event.longitude}