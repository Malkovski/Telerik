extends ../shared/baseView

block main-content
    .container.text-center
        h2 REGISTERED USERS
        form(method="post", action="/filter-users")
            .row
                .col-md-2 Order by
                .col-md-2 Order type
                .col-md-2 Search
                .col-md-6
            .row
                .col-md-2
                    select(name="orderBy")
                        option Id
                        option Name
                .col-md-2
                    select(name="orderType")
                        option Ascending
                        option Descending
                .col-md-2
                    input(type="text", name="contains")
                .col-md-3
                    input(type="checkbox", name="private")
                    span Include private
                .col-md-3
                    input(type="submit", class="btn btn-md btn-info", value="Filter")
        table.table.table-striped.table-bordered.table-hover
            thead
                th.text-center Username
                th.text-center ID
            tbody
            for u in usersList
                tr
                    td #{u.username}
                    td #{u.id}


