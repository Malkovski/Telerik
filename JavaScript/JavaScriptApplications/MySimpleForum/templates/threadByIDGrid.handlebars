<table class="table table-hover table table-bordered">
    <thead>
    <tr>
        <th class="alert-danger">Title</th>
        <th class="alert-danger">ID</th>
        <th class="alert-danger">User</th>
        <th class="alert-danger">Post date</th>
    </tr>
    </thead>
        <tr class="active">
            <td class="success col-sm-2"><strong>{{result.title}}</strong></td>
            <td class="success col-sm-2">{{result.id}}</td>
            <td class="success col-sm-2"><strong>{{result.user.username}}</td>
            <td class="success col-sm-2">{{result.postDate}}</td>
        </tr>
    {{#each result.messages}}
        <tr>{{this}}</tr>
        {{/each}}
</table>