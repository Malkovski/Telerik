<form class="form-horizontal">
    <div class="form-group">
        <label for="account-name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="login-name" placeholder="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="account-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="login-password" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-primary" id="login-account-btn">Login</button>
            <button type="reset" class="btn btn-default">Cancel</button>
        </div>
    </div>
</form>
