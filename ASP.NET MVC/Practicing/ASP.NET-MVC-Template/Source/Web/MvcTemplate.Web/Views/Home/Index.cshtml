@model MvcTemplate.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}
<h1>Вицове</h1>

<div class="row">
    @foreach (var joke in Model.Jokes)
    {
        <div class="col-lg-4" style="word-wrap:break-word">
           @Html.ActionLink(@joke.Content, "ById", "Jokes", new { id = @joke.Id }, null)
            <div>@joke.Category</div>
        </div>
    }
</div>
<h1>Категории</h1>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-2">
            @category.Name
        </div>
    }
</div>