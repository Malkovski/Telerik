
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Ajax.BeginForm("Create", "Movies",
    new AjaxOptions
    {
        UpdateTargetId = "results",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST"
    }, new { id = "createMovieForm" }
    ))
{
    @Html.AntiForgeryToken()
    <input type="text" name="Title" placeholder="Enter title"/>
    <input type="text" name="Year" placeholder="Enter year"/>
    <input type="text" name="Director" placeholder="Enter director"/>
    <input type="text" name="Studio" placeholder="Enter studio"/>
    <input type="text" name="StudioAddress" placeholder="Enter studio address"/>
    <input type="submit" />
}